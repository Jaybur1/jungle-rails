
<tr>
  <td>
    <%= image_tag product.image.tiny %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <h6><%= product.description %></h6>
  </td>
  <td>
  <%= quantity %>
  </td>
  <td>
  <% if active_sale %> 
    <% sale_off = (active_sale.percent_off / 100.0)%>
   <del><%= humanized_money_with_symbol product.price %></del> <%= humanized_money_with_symbol product.price - (product.price * sale_off) %>
    <% else %>
    <%= humanized_money_with_symbol product.price %>
    <% end %>
  </td>
  <td>
   <% if active_sale %> 
    <% sale_off = (active_sale.percent_off / 100.0)%>
   <del><%= humanized_money_with_symbol product.price %></del> <%= humanized_money_with_symbol product.price - (product.price * sale_off) *quantity%>
    <% else %>
    <%= humanized_money_with_symbol product.price * quantity%>
    <% end %>
  </td></tr>