<div class="form container justify-content-center">
  <h1>Login</h1>
  <hr/>
<%= form_tag '/login' do %>
  <div class="field">
    <%= text_field_tag :email, nil, placeholder: "Email"%>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, placeholder: "Password" %>
  </div>
  <div class="actions"><%= submit_tag "Login" %></div>
 </div>
<% end %>
